<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RaidCalculator.Views.MainPage"
             Title="{Binding Title}" Padding="32" Appearing="MainPage_OnAppearing">

    <StackLayout HorizontalOptions="Fill" VerticalOptions="Start">

        <Image x:Name="Logo" WidthRequest="128" VerticalOptions="FillAndExpand" HorizontalOptions="Center" >
            <Image.Source>
                <UriImageSource CacheValidity="1" CachingEnabled="True" Uri="https://raw.githubusercontent.com/lordasgart/RaidCalculator/master/src/RaidCalculator.png">
                </UriImageSource>
            </Image.Source>
        </Image>

        <Label Text="Arenaname:"></Label>
        <Entry x:Name="ArenaNameEntry" Text="{Binding ArenaName}" />
        <StackLayout Orientation="Horizontal">
            <Label Text="Hat schon begonnen:"  VerticalOptions="Center"></Label>
            <Switch IsToggled="{Binding IsAlreadyStarted}"></Switch>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Zeit:" VerticalOptions="Center"></Label>
            <Entry Text="{Binding Hours}" Keyboard="Numeric" HorizontalOptions="StartAndExpand"></Entry>
            <Label Text=":" HorizontalTextAlignment="Center" HorizontalOptions="Start" VerticalOptions="Center"></Label>
            <Entry Text="{Binding Minutes}" Keyboard="Numeric" HorizontalOptions="StartAndExpand"></Entry>
            <Label Text=":" HorizontalTextAlignment="Center"  HorizontalOptions="Start" VerticalOptions="Center"></Label>
            <Entry Text="{Binding Seconds}" Keyboard="Numeric" HorizontalOptions="StartAndExpand"></Entry>
            <Button Text="Berechnen" Command="{Binding GetMessageTextCommand}" HorizontalOptions="End"></Button>
        </StackLayout>
        <Entry Text="{Binding MessageText}" />
        <Button Text="Kopieren" Command="{Binding CopyCommand}"></Button>
        <Button Text="Teilen" Command="{Binding ShareCommand}"></Button>
    </StackLayout>

</ContentPage>